<div class="card" id="card-{{ card.card_id }}"
     style="background-color: {{ card_color }}; border-color: {{ card_border_color }}"
     data-date="{{ card.card_date | lower }}"
     data-matiere="{{ card.card_title | lower }}"><!-- Utilisez le filtre 'lower' pour normaliser les données -->
    <div class="checkbox-container">
        <input type="checkbox" class="card-checkbox" id="checkbox{{ card.card_id }}" data-card-id="{{ card.card_id }}">
        <label for="checkbox{{ card.card_id }}"></label>
    </div>
    <div class="card-date" style="background-color: {{ card_date_background_color }}">
        {{ card.card_date }}
    </div>
    <div class="card-content">
        <div class="card-title" style="color: {{ card_title_color }}">{{ card.card_title }}</div>
        <hr class="matiere" style="border-color: {{ card_matiere_border_color }}">
        <div class="additional-content">
            <p class="details" style="color: {{ card_details_color }}">{{ card.card_details }}</p>
            <ul class="card-details" style="color: {{ card_detail_item_color }}">
                {% for detail in card.card_detail_items %}
                    <li>{{ detail }}</li>
                {% endfor %}
            </ul>
            <p class="send" style="color: {{ card_send_color }}">À envoyer à l'adresse suivante :</p>
            <p class="email-address" style="color: {{ card_email_address_color }}">{{ card.card_email }}</p>
        </div>
    </div>
    {% include 'partials/main-content/card_actions.html.twig' %}
</div>
