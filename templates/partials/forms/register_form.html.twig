<div class="main-content">
    <div class="main-content__item">
        {% include 'partials/main-content/header.html.twig' with {'date': date, 'username': username} %}

        <h3 class="title-filter">Formulaire d'inscription</h3>

        <div id="register-form">
            <form action="{{ path('register') }}" method="post">
                <div class="form-row">
                    <div class="form-group">
                        <label for="prenom">Pr√©nom :</label>
                        <input id="prenom" type="text" name="prenom" required placeholder="John" />
                    </div>

                    <div class="form-group">
                        <label for="register-lastname">Nom :</label>
                        <input id="register-lastname" type="text" name="nom" required placeholder="Doe" />
                    </div>
                </div>

                <div class="form-group">
                    <label>Email :</label>
                    <div class="email-input-group">
                        <input type="text" name="emailPart1" required placeholder="prenom" pattern="[a-z]+" />
                        <span class="email-separator">.</span>
                        <input type="text" name="emailPart2" required placeholder="nom" pattern="[a-z]+" />
                        <span class="email-domain">@etudiant.univ-reims.fr</span>
                    </div>
                    {% if errors['email'] is defined %}
                        <div class="error">{{ errors.email }}</div>
                    {% endif %}
                </div>

                <div class="form-row">
                    <div class="form-group password-field">
                        <label for="register-password">Mot de passe :</label>
                        <input id="register-password" type="password" name="password" required />
                        <label>
                            <input type="checkbox" onchange="document.getElementById('register-password').type = this.checked ? 'text' : 'password'"> Afficher le mot de passe
                        </label>
                        {% if errors['password'] is defined %}
                            <div class="error">{{ errors.password }}</div>
                        {% endif %}
                        {% if errors['password_maj'] is defined %}
                            <div class="error">{{ errors.password_maj }}</div>
                        {% endif %}
                        {% if errors['password_special'] is defined %}
                            <div class="error">{{ errors.password_special }}</div>
                        {% endif %}
                        {% if errors['password_confirm'] is defined %}
                            <div class="error">{{ errors.password_confirm }}</div>
                        {% endif %}
                    </div>

                    <div class="form-group password-field">
                        <label for="register-confirm-password">Confirmer le mot de passe :</label>
                        <input id="register-confirm-password" type="password" name="confirmPassword" required />
                        <label>
                            <input type="checkbox" onchange="document.getElementById('register-confirm-password').type = this.checked ? 'text' : 'password'"> Afficher le mot de passe
                        </label>
                        {% if errors['confirmPassword'] is defined %}
                            <div class="error">{{ errors.confirmPassword }}</div>
                        {% endif %}
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="register-semestre">Semestre :</label>
                        <select id="register-semestre" name="semestre">
                            {% for item in card_rank_items %}
                                <option value="{{ item.value }}">{{ item.label }}</option>
                            {% endfor %}
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="register-groupe">Groupe :</label>
                        <select id="register-groupe" name="groupe">
                            {% for item in group_items %}
                                <option value="{{ item.value }}">{{ item.label }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>

                <button class="registerbtn" type="submit">S'inscrire</button>
            </form>
        </div>
    </div>
</div>
